{
  "dependencies": {
    "prettier": "^3.5.3",
    "stylelint": "^16.19.1"
  },

  "scripts": {
    "check": "prettier --check './**/*.{html,css}'",
    "format": "prettier --write './**/*.{html,css}'",
    "lint": "stylelint '**/*.css'",
    "lintfix": "stylelint '**/*.css' --fix",
    "checkAll": "npm run check && npm run lint",
    "fixAll": "npm run format && npm run lintfix"
  }
}
